#include <stdio.h>

int main()
{
    int n, i;
    printf("Enter the size of array: ");
    scanf("%d", &n);

    int array[n];
    printf("Enter %d integers:\n", n);

    for (i = 0; i < n; i++)
    {
        printf("Element %d: ", i + 1);
        scanf("%d", &array[i]);
    }

    printf("\nYou entered:\n| ");
    for (i = 0; i < n; i++)
    {
        printf("%d ", array[i]);
    }
    printf("|\n");

    // Insertion Sort
    for (i = 1; i < n; ++i)
    {
        int key = array[i];
        int j = i - 1;

        while (j >= 0 && array[j] > key)
        {
            array[j + 1] = array[j];
            j = j - 1;
        }
        array[j + 1] = key;
    }

    printf("\nSorted array is:\n| ");
    for (i = 0; i < n; i++)
    {
        printf("%d ", array[i]);
    }
    printf("|\n");

    return 0;
}
